{
  // Core Behavior / Security / Git
  "git.openRepositoryInParentFolders": "always",
  "security.workspace.trust.untrustedFiles": "open",
  "keyboard.dispatch": "keyCode",
  "scm.workingSets.enabled": true,
  // Window / Workbench / UI
  "window.zoomLevel": 0.7,
  "window.zoomPerWindow": false,
  "window.customTitleBarVisibility": "auto",
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "workbench.colorCustomizations": {
    "editor.selectionHighlightBackground": "#0000",
    "editor.selectionHighlightBorder": "#0000",
    "editor.wordHighlightStrongBackground": "#0000",
    "editor.wordHighlightStrongBorder": "#0000",
    "editor.wordHighlightBackground": "#0000",
    "editor.wordHighlightBorder": "#0000",
    "editorBracketMatch.background": "#0000",
    "editor.background": "#202020"
  },
  // Explorer / Files
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "explorer.compactFolders": false,
  "files.defaultLanguage": "plaintext",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .prettier*, prettier*, .editorconfig",
    ".env": "*.env, .env.*"
  },
  // Editor (General Settings)
  "editor.fontFamily": "Fira Code, Menlo",
  "editor.minimap.enabled": false,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": "active",
  "editor.bracketPairColorization.enabled": true,
  "editor.inlayHints.enabled": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.stickyScroll.enabled": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.formatOnSave": true,
  "editor.accessibilitySupport": "off",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  // Language Specific Settings
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "wongjn.php-sniffer"
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "[cpp]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[rust]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // C/C++ Development
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_fallbackStyle": "Google",
  // Python Specific
  "autopep8.args": ["--max-line-length=90"],
  // Web Development (Tailwind, Emmet, etc.)
  "tailwindCSS.classAttributes": ["class", "ui"],
  "tailwindCSS.colorDecorators": false,
  "emmet.includeLanguages": {
    "twig": "html"
  },

  // Vim Keybindings
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["<S-g>"],
      "after": ["<S-g>", "z", "z"]
    },
    {
      "before": ["{"],
      "after": ["{", "z", "z"]
    },
    {
      "before": ["}"],
      "after": ["}", "z", "z"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z", "z", "v"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z", "z", "v"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "_", "d", "P"]
    }
  ],
  // Extensions & Integrations
  "extensions.ignoreRecommendations": true,
  "eslint.format.enable": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  // Copilot & Chat AI
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "javascript": false
  },
  "chat.agent.enabled": true,

  // Telemetry
  "redhat.telemetry.enabled": true,
  "material-icon-theme.saturation": 1,
  "git.enableSmartCommit": true,
  "debug.onTaskErrors": "showErrors"
}
